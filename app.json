{
      "apps" : [{
        "name": "xinrongnews", 
        "script": "./bin/production.js",
        "instances": 3,
        "exec_mode": "cluster",
        "watch": false,
        "ignore_watch" : ["node_modules", "public", "logs", "views", "package.json", "config", ".git/*"],
        "listen_timeout": 8000,
        "kill_timeout": 1600,
        "env": {
            "NODE_ENV": "production"
        },
        "source_map_support": true,
        "log_date_format": "YYYY-MM-DD HH:mm Z",
        "log_file": "./logs/combined.log",
        "error_file": "./logs/err.log",
        "out_file": "./logs/out.log",
        "merge_logs": true,
        "listen_timeout": "8000",
        "kill_timeout": "1600",
        "restart_delay": "3000",
        "autorestart": true,
        "force": false
    }]
}
